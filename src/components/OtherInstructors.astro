---
import CTAButton from './CTAButton.astro';

const instructors = [
  {
    name: 'Anthony Matarese Jr.',
    title: 'First American World English Sporting Champion',
    href: '/anthony-matarese-jr',
    trackingId: 'other_instructors_anthony_link',
    image: '/assets/images/anthony-i-matarese-jr_instructor_hero_desktop.jpg'
  },
  {
    name: 'Zachary Kienbaum',
    title: '3-Time National Champion, 2024 FITASC World Champion',
    href: '/zachary-kienbaum',
    trackingId: 'other_instructors_zachary_link',
    image: '/assets/images/zachary-kienbaum_instructor_hero_desktop.jpg'
  },
  {
    name: 'George Digweed',
    title: '31-Time World Champion',
    href: '/george-digweed',
    trackingId: 'other_instructors_george_link',
    image: '/assets/images/george_digweed_instructor_hero_desktop.jpg'
  }
];

export interface Props {
  currentInstructor: string;
}

const { currentInstructor } = Astro.props;

const otherInstructors = instructors.filter(i => i.name !== currentInstructor);
---

<section class="py-16 bg-bg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-text-primary">Meet the Other Champions</h2>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      {otherInstructors.map(instructor => (
        <div class="bg-surface rounded-lg p-8 text-center flex flex-col">
          <img 
            src={instructor.image} 
            alt={`${instructor.name} - Professional Clay Shooting Instructor`}
            class="w-20 h-20 rounded-lg object-cover object-left mx-auto mb-4"
          />
          <h3 class="text-xl font-bold text-text-primary mb-2 whitespace-nowrap">{instructor.name}</h3>
          <p class="text-secondary font-medium mb-4 flex-grow">{instructor.title}</p>
          <div>
            <CTAButton
              text={`Learn About ${instructor.name.split(' ')[0]}`}
              href={instructor.href}
              variant="secondary"
              size="small"
              trackingId={instructor.trackingId}
            />
          </div>
        </div>
      ))}
    </div>
  </div>
</section>