---
// src/components/Footer.astro

const currentYear = new Date().getFullYear();
const socialLinks = [
  { href: "https://www.facebook.com/clayinstruction", label: "Facebook", icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M9.19795 21.5H13.198V13.4901H16.8021L17.198 9.50977H13.198V7.5C13.198 6.94772 13.6457 6.5 14.198 6.5H17.198V2.5H14.198C11.4365 2.5 9.19795 4.73858 9.19795 7.5V9.50977H7.19795L6.80206 13.4901H9.19795V21.5Z"></path></svg>` },
  { href: "https://www.youtube.com/@ClayTargetInstruction", label: "YouTube", icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M21.543 6.498C22 8.28 22 12 22 12C22 12 22 15.72 21.543 17.502C21.289 18.487 20.546 19.262 19.605 19.524C17.896 20 12 20 12 20C12 20 6.107 20 4.395 19.524C3.45 19.258 2.708 18.484 2.457 17.502C2 15.72 2 12 2 12C2 12 2 8.28 2.457 6.498C2.711 5.513 3.454 4.738 4.395 4.476C6.107 4 12 4 12 4C12 4 17.896 4 19.605 4.476C20.55 4.742 21.292 5.516 21.543 6.498ZM10 15.5L16 12L10 8.5V15.5Z"></path></svg>` },
];
---
<footer class="bg-[#0a0a0a] text-text-secondary">
  <div class="h-1 bg-gradient-to-r from-secondary via-highlight to-primary"></div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 pb-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-[1.5fr_1fr_1fr_1fr] gap-12">
      <div class="flex flex-col">
        <a href="/" class="mb-4">
          <img src="/assets/images/claytarget_combination-mark_white.png" alt="Clay Target Instruction Logo" loading="lazy" class="h-9 w-auto">
        </a>
        <p class="text-sm leading-relaxed pr-4">
          World-class online clay shooting instruction from champion instructors.
        </p>
        <div class="flex gap-3 mt-auto pt-4">
          {socialLinks.map(link => (
            <a href={link.href} aria-label={link.label} target="_blank" rel="noopener noreferrer" class="w-9 h-9 rounded-full bg-surface hover:bg-primary text-text-primary hover:text-black flex items-center justify-center transition-all duration-300 hover:-translate-y-1">
              <Fragment set:html={link.icon} />
            </a>
          ))}
        </div>
      </div>
      <div>
        <h4 class="font-bold text-text-primary mb-6 pb-2 border-b-2 border-primary w-fit">Quick Links</h4>
        <ul class="space-y-3">
          <li><a href="/#instructors" class="text-sm hover:text-primary transition-colors">Instructors</a></li>
          <li><a href="https://digital.claytargetinstruction.com/l/products?sortKey=name&sortDirection=asc&page=1" target="_blank" rel="noopener noreferrer" class="text-sm hover:text-primary transition-colors">Courses</a></li>
          <li><a href="/articles" class="text-sm hover:text-primary transition-colors">Articles</a></li>
          <li><a href="/faq" class="text-sm hover:text-primary transition-colors">FAQ</a></li>
        </ul>
      </div>
      <div>
        <h4 class="font-bold text-text-primary mb-6 pb-2 border-b-2 border-primary w-fit">Resources</h4>
        <ul class="space-y-3">
          <li><a href="https://digital.claytargetinstruction.com/l/products?sortKey=name&sortDirection=asc&page=1" target="_blank" rel="noopener noreferrer" class="text-sm hover:text-primary transition-colors">Start Training</a></li>
          <li><a href="https://digital.claytargetinstruction.com/l/products?sortKey=name&sortDirection=asc&page=1" target="_blank" rel="noopener noreferrer" class="text-sm hover:text-primary transition-colors">Browse Courses</a></li>
          <li><a href="/contact" class="text-sm hover:text-primary transition-colors">Contact</a></li>
        </ul>
      </div>
      <div>
        <h4 class="font-bold text-text-primary mb-6 pb-2 border-b-2 border-primary w-fit">Contact Us</h4>
        <ul class="space-y-4">
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-primary flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" /></svg>
            <a href="mailto:support@claytargetinstruction.com" class="text-sm hover:text-primary transition-colors">support@claytargetinstruction.com</a>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-primary flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" /></svg>
            <span class="text-sm">United States</span>
          </li>
        </ul>
      </div>
    </div>
    <div class="mt-12 pt-8 border-t border-surface/50 flex flex-col sm:flex-row justify-between items-center text-sm">
      <p class="text-text-secondary/70">Â© {currentYear} Clay Target Instruction. All rights reserved.</p>
      <div class="flex gap-4 mt-4 sm:mt-0">
        <a href="/privacy-policy" class="hover:text-primary transition-colors">Privacy Policy</a>
        <a href="/terms-of-service" class="hover:text-primary transition-colors">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>