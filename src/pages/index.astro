---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroVideo from '../components/HeroVideo.astro';
import TestimonialGrid from '../components/TestimonialGrid.astro';
import InstructorVideoPreview from '../components/InstructorVideoPreview.astro';
import CTAButton from '../components/CTAButton.astro';

const instructors = [
  {
    name: "George Digweed MBE",
    videoSrc: "/assets/video/intro.mp4",
    posterSrc: "/assets/images/george_digweed_instructor_hero_desktop.jpg",
    achievement: "31 World Championships",
    philosophy: "See the target. Trust the eyes. Let it happen.",
    authorId: "2149776",
    specialty: "Visual trust • Instinctive movement • Strategic simplicity",
    focus: ""
  },
  {
    name: "Anthony Matarese Jr.",
    videoSrc: "/assets/video/anthony-matarese-promo.mp4", 
    posterSrc: "/assets/images/anthony-i-matarese-jr_instructor_hero_desktop.jpg",
    achievement: "The American G.O.A.T.",
    philosophy: "Build champions through structure, not superstition.",
    authorId: "1232914",
    specialty: "Mental game mastery • Process focus • Technical precision",
    focus: ""
  },
  {
    name: "Zachary Kienbaum",
    videoSrc: "/assets/video/zachary-kienbaum-promo.mp4",
    posterSrc: "/assets/images/zachary-kienbaum_instructor_hero_desktop.jpg",
    achievement: "2024 FITASC World Champion",
    philosophy: "Turns mechanics into confidence and confidence into consistency.",
    authorId: "2136725",
    specialty: "Tempo control • Dynamic techniques • Competition tactics",
    focus: ""
  }
];
---

<BaseLayout 
  title="Learn From World Champions | Clay Target Instruction"
  description="3 World Champions. 36+ Championships. One Revolutionary Platform. Learn the exact methods that built the greatest careers in clay shooting."
>

  <!-- Hero Section -->
  <HeroVideo 
    videoSrc="/assets/video/Breaking_Clays_Animation_Hero.mp4"
    posterSrc="/assets/images/zachary-kienbaum_instructor_hero_desktop.jpg"
    overlayOpacity={0.6}
  >
    <div class="hero-content-inner">
      <h1 class="hero-title">
        The Greatest Champions in Clay Shooting History
      </h1>
      
      <div class="hero-instructors">
        <span class="instructor-name">George Digweed MBE</span>
        <span class="dot-separator">•</span>
        <span class="instructor-name">Anthony Matarese Jr.</span>
        <span class="dot-separator">•</span>
        <span class="instructor-name">Zachary Kienbaum</span>
      </div>
      
      <h2 class="hero-subtitle-main">
        Now Training You
      </h2>
      
      <div style="display: flex; justify-content: center;">
        <div class="hero-stats">
        <div class="stat-item">
          <div class="stat-number">3</div>
          <div class="stat-label">Legends</div>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <div class="stat-number">5,000+</div>
          <div class="stat-label">Students</div>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <div class="stat-number">4.9/5</div>
          <div class="stat-label">Stars</div>
        </div>
      </div>
      </div>

      <CTAButton 
        href="#promo-video"
        text="Start Your Journey"
        variant="primary"
        size="large"
        trackingId="index_hero_primary"
        withArrow={true}
        usePulse={true}
      />
      
      <p class="hero-guarantee">
        Lifetime access • Instant access • 30-day guarantee
      </p>
    </div>
  </HeroVideo>

  <!-- Promo Video Section -->
  <section id="promo-video" class="promo-video-section">
    <div class="container-max">
      <h2>Your First Lesson Starts Now</h2>
      <p class="video-subtitle">Watch a preview of our world-class instruction</p>
      
      <div class="video-container-wrapper">
        <div class="video-container">
          <div class="play-button-overlay">
            <div class="play-button-circle">
              <div class="play-icon"></div>
            </div>
            <span class="play-text">Watch Preview</span>
          </div>
          <video 
            id="promo-video-player"
            poster="/assets/images/anthony-i-matarese-jr_instructor_hero_desktop.jpg" 
            preload="none">
            <source src="/assets/video/anthony-matarese-promo.mp4" type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        </div>
      </div>
    </div>
  </section>

  <!-- Instructor Video Previews -->
  <section class="instructors-section">
    <div class="container-max">
      <h2>Meet Your World-Champion Instructors</h2>
      <p class="section-subtitle">
        Three legends. Three methods. One goal: your success.
      </p>
      
      <div class="instructor-grid">
        {instructors.map(instructor => (
          <InstructorVideoPreview {...instructor} />
        ))}
      </div>
      
      <div class="complete-collection-cta">
        <p class="collection-text">Want It All? Access Every Champion's Complete Course Library</p>
        <CTAButton 
          href="https://digital.claytargetinstruction.com/p/all-courses"
          text="Get the Complete Collection"
          variant="primary"
          size="large"
          trackingId="index_complete_collection"
          withArrow={true}
        />
      </div>
    </div>
  </section>

  <!-- The CTI Difference -->
  <section class="cti-difference-section">
    <div class="container-max">
      <div class="difference-header">
        <span class="section-badge">THE CTI DIFFERENCE</span>
        <h2>See The Future of Clay Shooting Instruction</h2>
        <p class="section-subtitle">Cinema-quality 4K instruction from multiple angles - this isn't your average YouTube clip</p>
      </div>
      
      <div class="showcase-visual-hero">
        <img src="/assets/images/visual-learning-system.png" alt="Visual Learning System showing break point, hold point, soft focus, target line, and hard focus" />
        <p class="visual-caption">This changes everything - see exactly what the pros see, when they see it</p>
      </div>
      
      <div class="difference-cards">
        <div class="difference-card">
          <div class="card-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
          </div>
          <h3>Detailed Breakdowns</h3>
          <p>Motion graphics and visual overlays reveal sight pictures, lead, and timing that were impossible to teach before.</p>
        </div>
        
        <div class="difference-card">
          <div class="card-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 11l3 3L22 4"/>
              <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"/>
            </svg>
          </div>
          <h3>Three Proven Methods</h3>
          <p>Learn George's instinctive swing, Anthony's structured system, or Zachary's tempo control - find what works for you.</p>
        </div>
        
        <div class="difference-card">
          <div class="card-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="6" width="20" height="12" rx="2"/>
              <path d="M12 12h.01"/>
              <path d="M2 10h20"/>
            </svg>
          </div>
          <h3>Lifetime Access</h3>
          <p>Own it forever with one purchase. No subscriptions, no monthly fees. Your personal shooting library, always available.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- What You'll Learn Section -->
  <section class="learn-section">
    <div class="container-max">
      <h2>Master the Complete System</h2>
      <p class="learn-subtitle">From fundamentals to championship-level techniques</p>
      
      <div class="learn-grid">
        <div class="learn-category">
          <h3>Foundation Skills</h3>
          <ul>
            <li><svg class="check-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Perfect gun mount & stance</li>
            <li><svg class="check-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Eye dominance optimization</li>
            <li><svg class="check-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Lead & timing fundamentals</li>
            <li><svg class="check-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Consistent pre-shot routine</li>
          </ul>
        </div>
        
        <div class="learn-category">
          <h3>Target Mastery</h3>
          <ul>
            <li><svg class="check-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Read any clay presentation</li>
            <li><svg class="check-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Master crossing targets</li>
            <li><svg class="check-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Conquer rising teal</li>
            <li><svg class="check-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Dominate quartering shots</li>
          </ul>
        </div>
        
        <div class="learn-category">
          <h3>Advanced Techniques</h3>
          <ul>
            <li><svg class="check-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Mental game & focus</li>
            <li><svg class="check-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Competition preparation</li>
            <li><svg class="check-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Champion sight pictures</li>
            <li><svg class="check-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Course management strategy</li>
          </ul>
        </div>
      </div>
      
      <div class="learn-more-section">
        <p class="learn-more-headline">
          <strong>Plus so much more</strong> – target-specific strategies, equipment optimization,<br/>
          mental game mastery, and competition tactics across <strong>100+ detailed lessons</strong>
        </p>
      </div>
      
      <!-- CTA -->
      <div class="learn-cta">
        <CTAButton
          text="Start Your Training Journey"
          href="https://digital.claytargetinstruction.com/l/products?sortKey=name&sortDirection=asc&page=1"
          variant="primary"
          size="large"
          external={true}
          trackingId="learn_section_cta"
          withArrow={true}
          usePulse={true}
        />
      </div>
    </div>
    <!-- Gradient Bar -->
    <div class="learn-gradient-bar"></div>
  </section>

  <!-- Clay Shooting Solutions -->
  <section class="features-section">
    <div class="container-max">
      <h2>Finally Fix What's Holding You Back</h2>
      <p class="features-subtitle">Championship solutions to your biggest clay shooting challenges</p>
      
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <circle cx="12" cy="12" r="6"/>
              <circle cx="12" cy="12" r="2"/>
            </svg>
          </div>
          <h3>"Was I Behind It?"</h3>
          <p>Cinema-quality production with multiple angles and motion graphics breaks down every element of the shot</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
              <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
              <line x1="12" y1="22.08" x2="12" y2="12"/>
            </svg>
          </div>
          <h3>"I'm Inconsistent"</h3>
          <p>Master repeatable mount, stance, and pre-shot routine that creates consistency</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14 2 14 8 20 8"/>
              <line x1="16" y1="13" x2="8" y2="13"/>
              <line x1="16" y1="17" x2="8" y2="17"/>
            </svg>
          </div>
          <h3>"Teal & Rabbits Kill Me"</h3>
          <p>Specific breakdowns for every presentation - crossing, quartering, teal, rabbits, battue</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 11a3 3 0 1 0 6 0 3 3 0 0 0-6 0"/>
              <path d="M17.657 16.657L13.414 20.9a2 2 0 0 1-2.827 0l-4.244-4.243a8 8 0 1 1 11.314 0z"/>
            </svg>
          </div>
          <h3>"I Choke in Competition"</h3>
          <p>Mental game training from champions who've won under extreme pressure</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
              <polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
          </div>
          <h3>"My Form Feels Wrong"</h3>
          <p>Compare your technique side-by-side with perfect championship form</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
            </svg>
          </div>
          <h3>"I've Plateaued"</h3>
          <p>Advanced techniques that took champions from good to world-class</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="testimonials-wrapper">
    <TestimonialGrid />
  </section>


  <!-- Final CTA -->
  <section class="final-cta-section">
    <div class="container-max">
      <h2>Ready to Train Like a Champion?</h2>
      
      <p class="final-cta-subtitle">
        Access comprehensive training from world champions. Start with foundation courses or dive into advanced championship methods.
      </p>
      
      <CTAButton 
        href="https://digital.claytargetinstruction.com/l/products?sortKey=name&sortDirection=asc&page=1"
        text="Start Your Training"
        variant="primary"
        size="large"
        trackingId="index_final_cta"
        withArrow={true}
      />
      
      <p class="guarantee">
        <span><svg class="inline-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg> 30-day money-back guarantee</span>
        <span><svg class="inline-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg> Instant access</span>
        <span><svg class="inline-icon" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg> All devices</span>
      </p>
    </div>
  </section>

  <style>
    /* Smooth scrolling for anchor links */
    html {
      scroll-behavior: smooth;
    }
    
    /* Hero Styles */
    .hero-content-inner {
      max-width: 900px;
      margin: 0 auto;
      text-align: center;
      padding: 3rem 0 2rem 0;
    }
    
    .hero-badge {
      display: inline-block;
      background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(255, 102, 0, 0.1));
      color: #FFFFFF;
      padding: 0.5rem 1.5rem;
      border-radius: 50px;
      font-size: 0.85rem;
      font-weight: 700;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      margin-bottom: 1.5rem;
      backdrop-filter: blur(10px);
      border: 1px solid transparent;
      background-origin: border-box;
      background-clip: padding-box, border-box;
      position: relative;
    }
    
    .hero-badge::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      border-radius: 50px;
      padding: 1px;
      background: linear-gradient(135deg, #8B5CF6, #FF6600);
      -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      z-index: -1;
    }

    .hero-title {
      font-size: clamp(2.5rem, 5vw, 3.5rem);
      font-weight: 800;
      line-height: 1.1;
      margin-bottom: 1rem;
      margin-top: 1rem;
      text-shadow: 2px 2px 8px rgba(0,0,0,0.7);
      color: #FFFFFF;
    }

    .hero-instructors {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      gap: 0.75rem;
      font-size: 1.1rem;
      margin-bottom: 1rem;
    }
    
    .hero-subtitle-main {
      font-size: clamp(2rem, 4vw, 2.8rem);
      font-weight: 700;
      color: #FFFFFF;
      margin-bottom: 2rem;
      text-shadow: 2px 2px 8px rgba(0,0,0,0.7);
    }
    
    .instructor-name {
      color: #FFFFFF;
      font-weight: 300;
      white-space: nowrap;
      text-shadow: 
        2px 2px 8px rgba(0,0,0,0.9),
        0 0 18px rgba(255,255,255,0.6),
        0 0 30px rgba(255,102,0,0.4),
        0 0 40px rgba(255,102,0,0.2);
      font-size: 1.15rem;
      letter-spacing: 0.08em;
      text-transform: uppercase;
    }
    
    .dot-separator {
      color: #FF6600;
      font-weight: 700;
    }
    
    @media (max-width: 768px) {
      .hero-instructors {
        flex-direction: column;
        gap: 0.5rem;
      }
      
      .dot-separator {
        display: none;
      }
    }
    
    .hero-stats {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 1.5rem;
      margin-bottom: 2rem;
      flex-wrap: wrap;
      background: linear-gradient(135deg, rgba(255,102,0,0.15), rgba(139,92,246,0.1));
      padding: 1.5rem 2.5rem;
      border-radius: 80px;
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255,255,255,0.1);
      display: inline-flex;
      position: relative;
      overflow: hidden;
    }
    
    .hero-stats::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(255,102,0,0.1) 0%, transparent 70%);
      animation: pulse 4s ease-in-out infinite;
    }
    
    @keyframes pulse {
      0%, 100% { transform: scale(1); opacity: 0.5; }
      50% { transform: scale(1.1); opacity: 0.8; }
    }
    
    .stat-item {
      text-align: center;
      position: relative;
      z-index: 1;
    }
    
    .stat-number {
      font-size: 2.2rem;
      font-weight: 800;
      background: linear-gradient(135deg, #FF6600, #FF8800);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-shadow: none;
      filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
    }
    
    .stat-label {
      font-size: 0.85rem;
      color: #FFFFFF;
      opacity: 0.95;
      margin-top: 0.25rem;
      font-weight: 600;
      letter-spacing: 0.05em;
      text-transform: uppercase;
    }
    
    .stat-divider {
      width: 1px;
      height: 35px;
      background: linear-gradient(180deg, transparent, rgba(255,255,255,0.4), transparent);
    }
    
    .hero-guarantee {
      margin-top: 1rem;
      font-size: 0.9rem;
      color: #FFFFFF;
      opacity: 0.8;
    }

    /* Promo Video Section */
    .promo-video-section {
      padding: 5rem 0;
      text-align: center;
      background: #f5f5f5;
      position: relative;
      overflow: hidden;
    }
    
    .promo-video-section::before {
      content: '';
      position: absolute;
      top: -50%;
