---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import MinimalArticleCard from '../../components/MinimalArticleCard.astro';
import CTAButton from '../../components/CTAButton.astro';

// Get all articles and sort by date
let articles = await getCollection('articles');
articles = articles.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout 
  title="Articles | Clay Target Instruction" 
  description="Expert insights on clay target shooting from world champions"
>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container-narrow">
      <div class="hero-content">
        <h1 class="hero-title">Expert <span class="text-accent">Insights</span></h1>
        <p class="hero-subtitle">
          Proven techniques and championship wisdom from world-class instructors
        </p>
      </div>
    </div>
  </section>

  <!-- Articles Section -->
  <section class="articles-section">
    <div class="container-narrow">
      <div class="articles-grid">
        {articles.map((article) => (
          <article class="article-card">
            <a href={`/articles/${article.slug}`} class="article-link">
              {article.data.image && (
                <div class="article-image">
                  <img 
                    src={article.data.image} 
                    alt={article.data.title}
                  />
                  <div class="image-overlay"></div>
                </div>
              )}
              <div class="article-content">
                <div class="article-meta">
                  <span class="author">{article.data.author}</span>
                  <span class="separator">â€¢</span>
                  <time class="date">
                    {new Date(article.data.date).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                </div>
                <h2 class="article-title">{article.data.title}</h2>
                <p class="article-description">{article.data.description}</p>
                <div class="read-more">
                  <span>Read Article</span>
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                    <path d="M7 10H13M13 10L10 7M13 10L10 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container-narrow">
      <h2>Ready to Improve Your Shooting?</h2>
      <p class="cta-subtitle">
        Learn from world champions with our comprehensive online training platform.
      </p>
      <CTAButton 
        text="Browse Training Courses"
        href="https://digital.claytargetinstruction.com"
        variant="primary"
        size="large"
        external={true}
        withArrow={true}
        usePulse={true}
      />
    </div>
  </section>
</BaseLayout>

<style>
  /* Container */
  .container-narrow {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Hero Section */
  .hero-section {
    padding: 5rem 0 3rem;
    background: linear-gradient(135deg, #0A0A0B 0%, #1A1A1C 100%);
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at 70% 30%, rgba(255, 102, 0, 0.05) 0%, transparent 50%);
    pointer-events: none;
  }

  .hero-content {
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    color: #FFFFFF;
    margin-bottom: 1rem;
  }

  .text-accent {
    color: #FF6600;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: #A0A0A0;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Articles Section */
  .articles-section {
    padding: 5rem 0;
    background: #f8f8f8;
  }

  .articles-grid {
    display: grid;
    gap: 2rem;
  }

  .article-card {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(0, 0, 0, 0.05);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
  }

  .article-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(255, 102, 0, 0.15);
    border-color: rgba(255, 102, 0, 0.2);
  }

  .article-link {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 2rem;
    align-items: center;
    text-decoration: none;
    color: inherit;
  }

  @media (max-width: 768px) {
    .article-link {
      grid-template-columns: 1fr;
      gap: 0;
    }
  }

  .article-image {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .article-card:hover .article-image img {
    transform: scale(1.05);
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent, rgba(0,0,0,0.1));
  }

  .article-content {
    padding: 2rem;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .author {
    color: #FF6600;
    font-weight: 600;
  }

  .separator {
    color: #A0A0A0;
  }

  .date {
    color: #666666;
  }

  .article-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: #111111;
    margin-bottom: 1rem;
    line-height: 1.2;
    transition: color 0.3s ease;
  }

  .article-card:hover .article-title {
    color: #FF6600;
  }

  .article-description {
    color: #666666;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #FF6600;
    font-weight: 600;
    transition: gap 0.3s ease;
  }

  .article-card:hover .read-more {
    gap: 1rem;
  }

  .read-more svg {
    transition: transform 0.3s ease;
  }

  .article-card:hover .read-more svg {
    transform: translateX(4px);
  }

  /* CTA Section */
  .cta-section {
    padding: 5rem 0;
    background: linear-gradient(135deg, #0A0A0B 0%, #1A1A1C 100%);
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    bottom: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at 30% 70%, rgba(139, 92, 246, 0.05) 0%, transparent 50%);
    pointer-events: none;
  }

  .cta-section h2 {
    font-size: 3rem;
    font-weight: 800;
    color: #FFFFFF;
    margin-bottom: 1rem;
  }

  .cta-subtitle {
    font-size: 1.2rem;
    color: #A0A0A0;
    max-width: 600px;
    margin: 0 auto 2.5rem;
    line-height: 1.6;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .article-content {
      padding: 1.5rem;
    }

    .article-title {
      font-size: 1.5rem;
    }

    .cta-section h2 {
      font-size: 2rem;
    }
  }
</style>