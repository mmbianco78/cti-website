---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import CTAButton from '../components/CTAButton.astro';
import Pill from '../components/Pill.astro';
import PromoVideo from '../components/PromoVideo.astro';

---

<BaseLayout 
  title="World Champion Clay Target Instruction | CTI"
  description="Train with legends like Anthony Matarese Jr., Zach Kienbaum, and George Digweed. Unlock their championship-winning systems for clay target shooting."
>
  <Navigation />

    <section class="py-20 sm:py-28 text-center bg-bg">
    <div class="max-w-4xl mx-auto px-4">

      <div class="flex items-center justify-center gap-4 mb-6">
        <Pill>World-Class Instruction</Pill>
      </div>

      <h1 class="text-4xl sm:text-6xl font-heading font-bold text-text-primary leading-tight">
        Learn From the World's Most Decorated Clay Target Champions
      </h1>

      {/* The simple divider is replaced with the new gradient swish */}
      <div class="w-48 h-1.5 bg-gradient-to-r from-primary to-transparent mx-auto my-8 rounded-full"></div>

      <p class="mt-4 text-xl text-text-primary max-w-3xl mx-auto">
        Master proven techniques from instructors with a combined 36+ world championships and decades of teaching experience
      </p>
      
<div class="mt-10">
        <CTAButton 
          text="START YOUR JOURNEY"
          href="#instructors"
          variant="primary"
          size="large"
          usePulse={true}
          shimmer={true}
          withArrow={true}
        />
      </div>
      
      <div class="mt-20 grid grid-cols-1 sm:grid-cols-3 gap-8">
        <div class="flex flex-col items-center">
          <div class="text-primary">
            <svg class="h-12 w-12" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M16.5 18.75h-9a9 9 0 119 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 15.75l-7.5-7.5-7.5 7.5" /><path stroke-linecap="round" stroke-linejoin="round" d="M12 21.75V12" /></svg>
          </div>
          <div class="mt-3 text-4xl font-bold text-text-primary">36+</div>
          <div class="text-sm text-text-secondary uppercase tracking-wider">World Championships</div>
        </div>
        <div class="flex flex-col items-center">
          <div class="text-primary">
            <svg class="h-12 w-12" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m-16.5 0v11.25A2.25 2.25 0 006 16.5h2.25m0 0h3.75m-3.75 0h7.5m0 0h3.75M3.75 21h16.5M3.75 12h16.5" /></svg>
          </div>
          <div class="mt-3 text-4xl font-bold text-text-primary">90+</div>
          <div class="text-sm text-text-secondary uppercase tracking-wider">Years Combined Experience</div>
        </div>
        <div class="flex flex-col items-center">
          <div class="text-primary">
             <svg class="h-12 w-12" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m-7.5-2.962a3.75 3.75 0 015.304 0M15 11.25a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" /></svg>
          </div>
          <div class="mt-3 text-4xl font-bold text-text-primary">5,000+</div>
          <div class="text-sm text-text-secondary uppercase tracking-wider">Students Trained</div>
        </div>
      </div>
    </div>
  </section>

 <section id="instructors" class="pt-0 pb-20 bg-bg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
