---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroVideo from '../components/HeroVideo.astro';
import TestimonialGrid from '../components/TestimonialGrid.astro';
import InstructorVideoPreview from '../components/InstructorVideoPreview.astro';
import CTAButton from '../components/CTAButton.astro';

const instructors = [
  {
    name: "George Digweed MBE",
    videoSrc: "/assets/video/intro.mp4",
    posterSrc: "/assets/images/george_digweed_instructor_hero_desktop.jpg",
    achievement: "31 World Championships",
    philosophy: "See the target. Trust the eyes. Let it happen.",
    authorId: "2136725",
    specialty: "Revolutionary swing-through technique with economy of motion",
    focus: "Visual trust • Instinctive movement • Strategic simplicity"
  },
  {
    name: "Anthony Matarese Jr.",
    videoSrc: "/assets/video/anthony-matarese-promo.mp4", 
    posterSrc: "/assets/images/anthony-i-matarese-jr_instructor_hero_desktop.jpg",
    achievement: "Youngest Hall of Fame Inductee",
    philosophy: "Build champions through structure, not superstition.",
    authorId: "1232914",
    specialty: "Structured progression with detailed visual breakdowns",
    focus: "Mental game mastery • Process focus • Technical precision"
  },
  {
    name: "Zachary Kienbaum",
    videoSrc: "/assets/video/zachary-kienbaum-promo.mp4",
    posterSrc: "/assets/images/zachary-kienbaum_instructor_hero_desktop.jpg",
    achievement: "2024 FITASC World Champion",
    philosophy: "Turns mechanics into confidence and confidence into consistency.",
    authorId: "2149776",
    specialty: "Master target reading with systematic visual training",
    focus: "Tempo control • Dynamic techniques • Competition tactics"
  }
];
---

<BaseLayout 
  title="Learn From World Champions | Clay Target Instruction"
  description="3 World Champions. 36+ Championships. One Revolutionary Platform. Learn the exact methods that built the greatest careers in clay shooting."
>

  <!-- Hero Section -->
  <HeroVideo 
    videoSrc="/assets/video/Breaking_Clays_Animation_Hero.mp4"
    posterSrc="/assets/images/zachary-kienbaum_instructor_hero_desktop.jpg"
    overlayOpacity={0.4}
  >
    <div class="hero-content-inner">
      <div class="hero-badge">36+ WORLD CHAMPIONSHIPS</div>
      
      <h1 class="hero-title">
        Learn From 3 Living Legends.<br>
        Master Their Championship Methods.
      </h1>
      
      <p class="hero-subtitle">
        George Digweed MBE • Anthony Matarese Jr. • Zachary Kienbaum
      </p>
      
      <div class="hero-stats">
        <div class="stat-item">
          <div class="stat-number">4.9/5</div>
          <div class="stat-label">Average Rating</div>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <div class="stat-number">5,000+</div>
          <div class="stat-label">Active Students</div>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <div class="stat-number">295+</div>
          <div class="stat-label">Verified Reviews</div>
        </div>
      </div>

      <CTAButton 
        href="https://digital.claytargetinstruction.com"
        text="See How Champions Really Shoot"
        variant="primary"
        size="large"
        trackingId="index3_hero_primary"
      />
      
      <p class="hero-guarantee">
        Lifetime access • No subscriptions • 30-day guarantee
      </p>
    </div>
  </HeroVideo>

  <!-- Promo Video Section -->
  <section class="promo-video-section">
    <div class="container-max">
      <h2>Watch World Champions Teach</h2>
      <p class="video-subtitle">90-second preview of championship instruction in action</p>
      
      <div class="video-container-wrapper">
        <div class="video-container">
          <div class="play-button-overlay">
            <div class="play-button-circle">
              <div class="play-icon">▶</div>
            </div>
            <span class="play-text">Watch Preview</span>
          </div>
          <video 
            id="promo-video"
            poster="/assets/images/anthony-i-matarese-jr_instructor_hero_desktop.jpg" 
            preload="none">
            <source src="/assets/video/anthony-matarese-promo.mp4" type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        </div>
      </div>
    </div>
  </section>

  <!-- Instructor Video Previews -->
  <section class="instructors-section">
    <div class="container-max">
      <h2>Choose Your Champion Instructor</h2>
      <p class="section-subtitle">
        Each champion's unique teaching method - all levels welcome
      </p>
      
      <div class="instructor-grid">
        {instructors.map(instructor => (
          <InstructorVideoPreview {...instructor} />
        ))}
      </div>
    </div>
  </section>

  <!-- The CTI Difference -->
  <section class="cti-difference-section">
    <div class="container-max">
      <div class="difference-header">
        <span class="section-badge">THE CTI DIFFERENCE</span>
        <h2>See The Future of Clay Shooting Instruction</h2>
        <p class="section-subtitle">Cinema-quality 4K instruction from multiple angles - this isn't your average YouTube clip</p>
      </div>
      
      <div class="showcase-visual-hero">
        <img src="/assets/images/visual-learning-system.png" alt="Visual Learning System showing break point, hold point, soft focus, target line, and hard focus" />
        <p class="visual-caption">This changes everything - see exactly what the pros see, when they see it</p>
      </div>
      
      <div class="difference-cards">
        <div class="difference-card">
          <div class="card-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7z"/>
              <circle cx="12" cy="12" r="3"/>
            </svg>
          </div>
          <h3>See the Invisible</h3>
          <p>Motion graphics and visual overlays reveal sight pictures, lead, and timing that were impossible to teach before.</p>
        </div>
        
        <div class="difference-card">
          <div class="card-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 11l3 3L22 4"/>
              <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"/>
            </svg>
          </div>
          <h3>Three Proven Methods</h3>
          <p>Learn George's instinctive swing, Anthony's structured system, or Zach's tempo control - find what works for you.</p>
        </div>
        
        <div class="difference-card">
          <div class="card-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="6" width="20" height="12" rx="2"/>
              <path d="M12 12h.01"/>
              <path d="M2 10h20"/>
            </svg>
          </div>
          <h3>Lifetime Access</h3>
          <p>Own it forever with one purchase. No subscriptions, no monthly fees. Your personal shooting library, always available.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- What You'll Learn Section -->
  <section class="learn-section">
    <div class="container-max">
      <h2>Master the Complete System</h2>
      <p class="learn-subtitle">From fundamentals to championship-level techniques</p>
      
      <div class="learn-grid">
        <div class="learn-category">
          <h3>Foundation Skills</h3>
          <ul>
            <li>Perfect gun mount & stance</li>
            <li>Eye dominance optimization</li>
            <li>Lead & timing fundamentals</li>
            <li>Consistent pre-shot routine</li>
          </ul>
        </div>
        
        <div class="learn-category">
          <h3>Target Mastery</h3>
          <ul>
            <li>Read any clay presentation</li>
            <li>Master crossing targets</li>
            <li>Conquer rising teal</li>
            <li>Dominate quartering shots</li>
          </ul>
        </div>
        
        <div class="learn-category">
          <h3>Advanced Techniques</h3>
          <ul>
            <li>Champion sight pictures</li>
            <li>Course management strategy</li>
            <li>Mental game & focus</li>
            <li>Competition preparation</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Clay Shooting Solutions -->
  <section class="features-section">
    <div class="container-max">
      <h2>Finally Fix What's Holding You Back</h2>
      <p class="features-subtitle">Championship solutions to your biggest clay shooting challenges</p>
      
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <circle cx="12" cy="12" r="6"/>
              <circle cx="12" cy="12" r="2"/>
            </svg>
          </div>
          <h3>"I Can't See the Lead"</h3>
          <p>Multiple camera angles and motion graphics show exact sight pictures for every target</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
              <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
              <line x1="12" y1="22.08" x2="12" y2="12"/>
            </svg>
          </div>
          <h3>"I'm Inconsistent"</h3>
          <p>Master repeatable mount, stance, and pre-shot routine that creates consistency</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14 2 14 8 20 8"/>
              <line x1="16" y1="13" x2="8" y2="13"/>
              <line x1="16" y1="17" x2="8" y2="17"/>
            </svg>
          </div>
          <h3>"Teal & Rabbits Kill Me"</h3>
          <p>Specific breakdowns for every presentation - crossing, quartering, teal, rabbits, battue</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 11a3 3 0 1 0 6 0 3 3 0 0 0-6 0"/>
              <path d="M17.657 16.657L13.414 20.9a2 2 0 0 1-2.827 0l-4.244-4.243a8 8 0 1 1 11.314 0z"/>
            </svg>
          </div>
          <h3>"I Choke in Competition"</h3>
          <p>Mental game training from champions who've won under extreme pressure</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
              <polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
          </div>
          <h3>"My Form Feels Wrong"</h3>
          <p>Compare your technique side-by-side with perfect championship form</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
            </svg>
          </div>
          <h3>"I've Plateaued"</h3>
          <p>Advanced techniques that took champions from good to world-class</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="testimonials-wrapper">
    <TestimonialGrid />
  </section>


  <!-- Final CTA -->
  <section class="final-cta-section">
    <div class="container-max">
      <h2>Join an Elite Community of Improving Shooters</h2>
      
      <div class="community-stats">
        <div class="stat">Join 47 students who enrolled this week</div>
        <div class="stat">Active community in 52 countries</div>
        <div class="stat">New lessons added monthly</div>
      </div>
      
      <p class="urgency-text">
        Start improving today – your competition already has
      </p>
      
      <CTAButton 
        href="https://digital.claytargetinstruction.com"
        text="Start Learning From Champions Today"
        variant="primary"
        size="large"
        trackingId="index3_final_cta"
      />
      
      <p class="guarantee">
        ✓ 30-day money-back guarantee ✓ Instant access ✓ All devices
      </p>
    </div>
  </section>

  <style>
    /* Hero Styles */
    .hero-content-inner {
      max-width: 900px;
      margin: 0 auto;
      text-align: center;
    }
    
    .hero-badge {
      display: inline-block;
      background: rgba(255, 102, 0, 0.2);
      border: 1px solid #FF6600;
      color: #FFFFFF;
      padding: 0.5rem 1.5rem;
      border-radius: 50px;
      font-size: 0.85rem;
      font-weight: 700;
      letter-spacing: 0.1em;
      margin-bottom: 2rem;
    }

    .hero-title {
      font-size: clamp(2.5rem, 6vw, 4rem);
      font-weight: 800;
      line-height: 1.1;
      margin-bottom: 1.5rem;
      text-shadow: 2px 2px 8px rgba(0,0,0,0.7);
      color: #FFFFFF;
    }

    .hero-subtitle {
      font-size: 1.3rem;
      margin-bottom: 3rem;
      color: #FFFFFF;
      opacity: 0.95;
      font-weight: 600;
      letter-spacing: 0.05em;
      text-transform: uppercase;
    }
    
    .hero-stats {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 2rem;
      margin-bottom: 3rem;
      flex-wrap: wrap;
    }
    
    .stat-item {
      text-align: center;
    }
    
    .stat-number {
      font-size: 2rem;
      font-weight: 800;
      color: #FF6600;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }
    
    .stat-label {
      font-size: 0.9rem;
      color: #FFFFFF;
      opacity: 0.9;
      margin-top: 0.25rem;
    }
    
    .stat-divider {
      width: 1px;
      height: 40px;
      background: rgba(255,255,255,0.3);
    }
    
    .hero-guarantee {
      margin-top: 1.5rem;
      font-size: 0.9rem;
      color: #FFFFFF;
      opacity: 0.8;
    }

    /* Promo Video Section */
    .promo-video-section {
      padding: 4rem 0;
      text-align: center;
      background: #f5f5f5;
    }

    .promo-video-section h2 {
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
      color: #111111;
    }
    
    .video-subtitle {
      color: #666666;
      margin-bottom: 3rem;
      font-size: 1.1rem;
      max-width: 700px;
      margin-left: auto;
      margin-right: auto;
    }

    .video-container-wrapper {
      position: relative;
      width: 100%;
      max-width: 900px;
      margin: 0 auto;
    }
    
    .video-container {
      width: 100%;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
      position: relative;
      background-color: #333;
      aspect-ratio: 16 / 9;
    }
    
    #promo-video {
      width: 100%;
      height: 100%;
      display: block;
      object-fit: cover;
    }
    
    /* Play button overlay for video */
    .play-button-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.3);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      z-index: 2;
      transition: all 0.3s ease;
      cursor: pointer;
    }
    
    .video-container:hover .play-button-overlay {
      background: rgba(0, 0, 0, 0.1);
    }
    
    .play-button-circle {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      background: rgba(255, 102, 0, 0.9);
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1rem;
      transition: all 0.3s ease;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
    }
    
    .video-container:hover .play-button-circle {
      transform: scale(1.1);
      background: rgba(255, 102, 0, 1);
    }
    
    .play-icon {
      font-size: 2rem;
      color: white;
      margin-left: 0.25rem;
    }
    
    .play-text {
      color: white;
      font-size: 1.1rem;
      font-weight: 600;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }

    /* CTI Difference Section */
    .cti-difference-section {
      padding: 5rem 0;
      background: linear-gradient(135deg, #0A0A0B 0%, #1A1A1C 50%, #0F0F10 100%);
      position: relative;
      overflow: hidden;
    }
    
    .cti-difference-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: 
        radial-gradient(ellipse at top left, rgba(255, 107, 26, 0.05) 0%, transparent 50%),
        radial-gradient(ellipse at bottom right, rgba(59, 130, 246, 0.05) 0%, transparent 50%);
      pointer-events: none;
    }
    
    .difference-header {
      text-align: center;
      margin-bottom: 4rem;
      position: relative;
      z-index: 1;
    }
    
    .section-badge {
      display: inline-block;
      background: rgba(255, 102, 0, 0.15);
      border: 1px solid rgba(255, 102, 0, 0.3);
      color: #FF6600;
      padding: 0.5rem 1.5rem;
      border-radius: 50px;
      font-size: 0.85rem;
      font-weight: 700;
      letter-spacing: 0.1em;
      margin-bottom: 1.5rem;
    }
    
    .cti-difference-section h2 {
      font-size: 3rem;
      color: white;
      margin-bottom: 0.5rem;
      font-weight: 800;
    }
    
    .cti-difference-section .section-subtitle {
      color: #cccccc;
      font-size: 1.2rem;
    }
    
    .showcase-visual-hero {
      max-width: 1000px;
      margin: 0 auto 4rem;
      position: relative;
      z-index: 1;
    }
    
    .showcase-visual-hero img {
      width: 100%;
      height: auto;
      border-radius: 16px;
      box-shadow: 0 30px 60px rgba(0,0,0,0.5);
      border: 2px solid rgba(255, 102, 0, 0.2);
    }
    
    .visual-caption {
      text-align: center;
      margin-top: 1.5rem;
      color: #FF6600;
      font-size: 1.1rem;
      font-style: italic;
      font-weight: 600;
    }
    
    .difference-cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      max-width: 1200px;
      margin: 0 auto;
      position: relative;
      z-index: 1;
    }
    
    .difference-card {
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 12px;
      padding: 2rem;
      text-align: center;
      transition: all 0.3s ease;
    }
    
    .difference-card:hover {
      background: rgba(255, 255, 255, 0.05);
      border-color: rgba(255, 102, 0, 0.3);
      transform: translateY(-5px);
    }
    
    .card-icon {
      width: 60px;
      height: 60px;
      margin: 0 auto 1.5rem;
      color: #FF6600;
    }
    
    .card-icon svg {
      width: 100%;
      height: 100%;
    }
    
    .difference-card h3 {
      font-size: 1.3rem;
      color: white;
      margin-bottom: 1rem;
      font-weight: 700;
    }
    
    .difference-card p {
      color: #cccccc;
      line-height: 1.6;
      font-size: 0.95rem;
    }
    
    @media (max-width: 768px) {
      .showcase-visual-hero {
        margin-bottom: 3rem;
      }
      
      .difference-cards {
        grid-template-columns: 1fr;
      }
      
      .cti-difference-section h2 {
        font-size: 2rem;
      }
    }

    /* What You'll Learn Section */
    .learn-section {
      padding: 4rem 0;
      background: #f8f8f8;
    }
    
    .learn-section h2 {
      text-align: center;
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
      color: #111111;
    }
    
    .learn-subtitle {
      text-align: center;
      color: #666666;
      margin-bottom: 3rem;
      font-size: 1.1rem;
    }
    
    .learn-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 3rem;
      max-width: 1000px;
      margin: 0 auto;
    }
    
    .learn-category h3 {
      font-size: 1.5rem;
      color: #FF6600;
      margin-bottom: 1rem;
    }
    
    .learn-category ul {
      list-style: none;
      padding: 0;
    }
    
    .learn-category li {
      position: relative;
      padding-left: 1.5rem;
      margin-bottom: 0.75rem;
      color: #333333;
      line-height: 1.6;
    }
    
    .learn-category li::before {
      content: "✓";
      position: absolute;
      left: 0;
      color: #FF6600;
      font-weight: bold;
    }

    /* Instructors Section */
    .instructors-section {
      padding: 5rem 0;
      background: linear-gradient(135deg, #0A0A0B 0%, #1A1A1C 100%);
      position: relative;
    }

    .instructors-section h2 {
      text-align: center;
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
      color: #FFFFFF;
    }

    .section-subtitle {
      text-align: center;
      color: #CCCCCC;
      margin-bottom: 3rem;
    }

    .instructor-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      max-width: 1200px;
      margin: 0 auto;
    }

    /* Features Section */
    .features-section {
      padding: 5rem 0;
      background: #111111;
      position: relative;
    }
    
    .features-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: 
        radial-gradient(ellipse at top right, rgba(255, 102, 0, 0.03) 0%, transparent 50%),
        radial-gradient(ellipse at bottom left, rgba(255, 102, 0, 0.03) 0%, transparent 50%);
      pointer-events: none;
    }

    .features-section h2 {
      text-align: center;
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
      color: #FFFFFF;
    }
    
    .features-subtitle {
      text-align: center;
      color: #CCCCCC;
      margin-bottom: 3rem;
      font-size: 1.1rem;
    }

    .features-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      max-width: 1000px;
      margin: 0 auto;
    }

    .feature-card {
      text-align: center;
      padding: 2rem;
    }

    .feature-icon {
      width: 60px;
      height: 60px;
      margin: 0 auto 1rem;
      color: #FF6600;
    }
    
    .feature-icon svg {
      width: 100%;
      height: 100%;
    }

    .feature-card h3 {
      font-size: 1.2rem;
