---
import "../styles/global.css";
import Navigation from '../components/Navigation.astro'; // <-- Import Navigation
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  noIndex?: boolean;
}

const { title, description = "World Champion Clay Target Instruction", noIndex = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title} | Clay Target Instruction</title>
    <meta name="description" content={description} />
    
    {noIndex && <meta name="robots" content="noindex" />}
    
    <link rel="canonical" href={Astro.url.href} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/placeholder-social.jpg" />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url.href} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="/placeholder-social.jpg" />
  </head>
  
  <body class="min-h-screen bg-bg text-text-primary font-sans antialiased">
    <div class="flex flex-col min-h-screen">
      
      {/* Add Navigation and Brand Bar to the top of every page */}
      <Navigation />
      <div class="h-0.5 bg-gradient-to-r from-secondary via-highlight to-primary"></div>

      <main class="flex-grow">
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>