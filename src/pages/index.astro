<style>
  /* Hero Section */
  .hero {
    position: relative;
    width: 100%;
    margin-bottom: 2rem;
  }
  
  .hero-banner {
    position: relative;
    width: 100%;
    min-height: 600px;
    overflow: hidden;
    background: #0A0A0A;
  }
  
  .hero-background {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    opacity: 0.8;
    z-index: 1;
  }
  
  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.5) 100%);
    z-index: 2;
  }
  
  .hero-content {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 600px;
    padding: 4rem 2rem;
    text-align: center;
  }
  
  .hero-badge {
    background: linear-gradient(90deg, #1E3A8A 0%, #3563E9 100%);
    color: white;
    font-size: 0.85rem;
    font-weight: 700;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    letter-spacing: 0.5px;
    margin-bottom: 1rem;
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
    text-transform: uppercase;
    display: inline-block;
  }
  
  @keyframes pulse-subtle {
    0% { box-shadow: 0 0 0 0 rgba(53, 99, 233, 0.5); }
    70% { box-shadow: 0 0 0 10px rgba(53, 99, 233, 0); }
    100% { box-shadow: 0 0 0 0 rgba(53, 99, 233, 0); }
  }
  
  .pulse-subtle {
    animation: pulse-subtle 2s infinite;
  }
  
  .hero-highlight {
    color: #FF6B1A;
    text-transform: uppercase;
    font-weight: 700;
    font-size: 1rem;
    letter-spacing: 2px;
    margin-bottom: 0.5rem;
    display: block;
  }
  
  .hero-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    color: #fff;
    margin-bottom: 2rem;
    text-shadow: 0 2px 4px rgba(0,0,0,0.5);
    line-height: 1.1;
    max-width: 900px;
  }
  
  .instructor-names-container {
    background: rgba(0, 0, 0, 0.4);
    border-radius: 100px;
    padding: 1rem 2rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    margin: 2rem 0;
  }
  
  .instructor-names {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    font-size: 1.4rem;
    font-weight: 700;
    margin: 0;
  }
  
  .instructor-name {
    color: #F2F2F2;
  }
  
  @keyframes nameHighlight1 {
    0%, 100% { color: #F2F2F2; }
    10%, 30% { color: #39FF14; text-shadow: 0 0 12px rgba(57, 255, 20, 0.6); }
  }
  
  @keyframes nameHighlight2 {
    0%, 35%, 100% { color: #F2F2F2; }
    40%, 60% { color: #39FF14; text-shadow: 0 0 12px rgba(57, 255, 20, 0.6); }
  }
  
  @keyframes nameHighlight3 {
    0%, 65%, 100% { color: #F2F2F2; }
    70%, 90% { color: #39FF14; text-shadow: 0 0 12px rgba(57, 255, 20, 0.6); }
  }
  
  .name1 { animation: nameHighlight1 10s infinite; }
  .name2 { animation: nameHighlight2 10s infinite; }
  .name3 { animation: nameHighlight3 10s infinite; }
  
  .name-separator {
    margin: 0 0.75rem;
    color: rgba(255, 255, 255, 0.4);
  }
  
  .hero-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(90deg, #D65A00 0%, #FF6600 100%);
    color: white;
    padding: 1.25rem 3rem;
    border-radius: 8px;
    font-weight: 800;
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: 0 10px 25px rgba(255, 102, 0, 0.4);
    transition: all 0.3s ease;
    text-decoration: none;
    margin-top: 2rem;
  }
  
  .hero-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 30px rgba(255, 102, 0, 0.5);
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    color: #E0E0E0;
    margin-top: 2rem;
    max-width: 700px;
    line-height: 1.6;
    font-style: italic;
  }
  
  /* Stats Section */
  .stats-section {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    max-width: 900px;
    margin: -3rem auto 0;
    position: relative;
    z-index: 20;
    background: rgba(17, 17, 18, 0.95);
    backdrop-filter: blur(10px);
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .stat-item {
    text-align: center;
  }
  
  .stat-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }
  
  .stat-value {
    font-size: 2.5rem;
    font-weight: 800;
    color: #FF6B1A;
    margin-bottom: 0.25rem;
  }
  
  .stat-label {
    font-size: 0.9rem;
    color: #A0A0A0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  /* Instructor Cards */
  .instructor-card {
    background: #1E1E1E;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .instructor-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
  }
  
  .instructor-image {
    position: relative;
    height: 240px;
    overflow: hidden;
  }
  
  .instructor-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .instructor-card:hover .instructor-image img {
    transform: scale(1.1);
  }
  
  .instructor-overlay {
    position: absolute;
    inset: 0;
