<style>
  .hero-section {
    padding: 5rem 0 3rem;
    background: linear-gradient(135deg, #0A0A0B 0%, #1A1A1C 100%);
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at 70% 30%, rgba(255, 102, 0, 0.05) 0%, transparent 50%);
    pointer-events: none;
  }

  .container-narrow {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    color: #FFFFFF;
    text-align: center;
    margin-bottom: 0;
  }

  .content-section {
    padding: 5rem 0;
    background: #f8f8f8;
  }

  .prose {
    color: #333333;
    line-height: 1.7;
  }

  .prose h1 {
    font-size: 2.5rem;
    font-weight: 800;
    color: #111111;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }

  .prose h2 {
    font-size: 1.75rem;
    font-weight: 700;
    color: #111111;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .prose p {
    margin-bottom: 1.5rem;
    font-size: 1.125rem;
  }

  .prose ul {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
    font-size: 1.125rem;
  }

  .last-updated {
    font-style: italic;
    color: #666666;
    margin-bottom: 2rem;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .prose h1 {
      font-size: 2rem;
    }

    .prose h2 {
      font-size: 1.5rem;
    }
  }
</style>