---
// src/components/FAQGrid.astro
export interface Props {
  question: string;
  answer: string;
  id: string;
}

const { question, answer, id } = Astro.props;
---

<div class="faq-item">
  <h3 class="faq-question">{question}</h3>
  <p class="faq-answer">{answer}</p>
</div>

<style>
  .faq-item {
    background-color: rgba(51, 51, 51, 0.4);
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 107, 26, 0.1);
    transition: all 0.3s ease;
    min-height: 100%;
    display: flex;
    flex-direction: column;
  }

  .faq-item:hover {
    background-color: rgba(51, 51, 51, 0.6);
    border-color: rgba(255, 107, 26, 0.2);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
  }

  .faq-question {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #FF6B1A;
    line-height: 1.4;
    font-family: var(--font-heading);
  }

  .faq-answer {
    font-size: 1.0625rem;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.7;
    margin: 0;
    font-family: var(--font-body);
    flex: 1;
  }

  @media (max-width: 768px) {
    .faq-item {
      padding: 1.5rem;
    }

    .faq-question {
      font-size: 1.125rem;
    }

    .faq-answer {
      font-size: 1rem;
    }
  }
</style>